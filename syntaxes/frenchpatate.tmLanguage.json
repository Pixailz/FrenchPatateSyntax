{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "FrenchPatate",
	"scopeName": "source.fp",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#types"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#instructions"
		},
		{
			"include": "#registers"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"begin": "#",
					"end": "\n",
					"name": "comment.line.number-sign"
				}
			]
		},

		"types": {
			"patterns": [
				{
					"include": "#integers"
				}
			]
		},
		"integers": {
			"patterns": [
				{
					"match": "(0x)([0-9a-fA-F]+)",
					"captures": {
						"1": {
							"name": "storage.type.hex.frenchpatate"
						},
						"2": {
							"name": "constant.numeric.hex.frenchpatate"
						}
					}
				},
				{
					"match": "(0b)([0-1]+)",
					"captures": {
						"1": {
							"name": "storage.type.bin.frenchpatate"
						},
						"2": {
							"name": "constant.numeric.bin.frenchpatate"
						}
					}
				},
				{
					"match": "[0-9]+",
					"name": "constant.numeric.dec.frenchpatate"
				}
			]
		},

		"operators": {
			"patterns": [
				{
					"match": "\\@",
					"name": "keyword.operator.frenchpatate"
				},
				{
					"match": "(:)([a-zA-Z0-9\\_]+)",
					"captures": {
						"1": {
							"name": "storage.type.label.frenchpatate"
						},
						"2": {
							"name": "entity.name.function"
						}
					}
				}
			]

		},

		"variables": {
			"patterns": [
				{
					"match": "(\\$)([0-9a-zA-Z\\_]+)(\\s+=\\s+)?.*?",
					"captures": {
						"1": {
							"name": "storage.modifier.frenchpatate"
						},
						"2": {
							"name": "variable.name.frenchpatate"
						},
						"3": {
							"name": "keyword.operator.assignement.frenchpatate"
						}
					}
				}
			]
		},

		"instructions": {
			"patterns": [
				{
					"match": "\\b(NOP|MOV|ADD|HLT)\\b",
					"name": "entity.name.tag.instruction.frenchpatate"
				}
			]
		},

		"registers": {
			"patterns": [
				{
					"match": "\\b[Rr][AaBbCcDd][Xx]\\b|\\b[AaBbCcDd][HhLl]\\b",
					"name": "entity.name.section"
				}
			]
		}
	}
}